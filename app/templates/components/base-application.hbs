<div class="row header-nav">
  <div class="row grow centered title">
    <span>{{applicationTitle}}</span>
  </div>

  <div class="sub-title">
    {{subTitle}}
  </div>
</div>

<div class="row grow centered">
    {{#if isLoading}}
      <div class="loader"></div>
    {{else if isNotStarted}}
      <div>The game is currently not started.</div>
    {{else if isError}}
      <div class="column">
        <div>Error Message: {{errorMessage}}</div>
      </div>
    {{else if isStarted}}
        {{#each grid as |column|}}
            <div class="column">
              {{#each column as |player|}}
                  <div class="centered game-square" style={{blockCSS}}>

                    {{#if player.name}}

                        {{#if (eq player.hp 0)}}
                          <div class="dead">{{player.name}}</div>
                        {{else}}
                            <div class="player column">
                                <div class="name">{{player.name}}</div>

                                <div class="stats row">
                                    <span class="hp"><img src="/assets/images/health.png"/>{{player.hp}}</span>
                                    <span class="defence"><img src="/assets/images/armor.png"/>{{player.defence}}</span>
                                    <span class="damage"><img src="/assets/images/damage.png"/>{{player.dmg}}</span>
                                </div>
                            </div>
                        {{/if}}

                    {{/if}}

                  </div>
              {{/each}}
            </div>
        {{/each}}

    {{else}}
      <div>Unknown Status</div>
    {{/if}}
</div>

<div class="row space-around width-100">
  <span>Request Count: {{turnNumber}}</span>
  <span>Game Status: {{gameStatusDisplay}}</span>
</div>

